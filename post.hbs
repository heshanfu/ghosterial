{{!< default}}

{{#post}}
    <div class="valign-wrapper center post-header-wrapper {{#if feature_image}}grey darken-4{{/if}}">
        {{#if feature_image}}
            <div class="post-header-image" style="background-image: url({{feature_image}});"></div>
        {{/if}}
    </div>

    <main class="container">
        {{navigation}}

        <div class="row">
            <div class="col s12 m10 offset-m1 l10 offset-l1">
                {{!-- Post title --}}
                <h2><strong>{{title}}</strong></h2>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m10 offset-m1 l10 offset-l1">
                {{!-- Publishing date & tags --}}
                <span class="thin">
                    <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">
                        {{date format="DD MMMM YYYY"}}
                    </time>
                    {{tags prefix=" on "}}
                </span>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m10 offset-m1 l10 offset-l1">
                {{!-- Post content --}}
                <section class="post-content">
                    {{content}}
                </section>

                <hr class="author-sep no-margin-bottom">
            </div>
        </div>
        <div class="row">
            <div class="col s12 m10 offset-m1 l10 offset-l1">
                <div class="row">
                    <div class="col s6 m6 l6">
                        {{!-- Author --}}
                        {{#author}}
                            <div class="left">
                                <h5>
                                    <strong>
                                        <a href="{{url}}" class="no-text-decoration">{{name}}</a>
                                    </strong>
                                </h5>
                                {{#if bio}}
                                    <p class="thin">{{bio}}</p>
                                {{else}}
                                    <p class="thin">Read <a href="{{url}}">more posts</a> by this author.</p>
                                {{/if}}

                                {{#if location}}
                                    <p class="grey-text text-lighten- light">
                                        <i class="fa fa-map-marker" aria-hidden="true"></i>
                                        {{location}}
                                    </p>
                                {{/if}}
                            </div>
                        {{/author}}
                    </div>
                    <div class="col s6 m6 l6">
                        {{!-- Sharing widgets --}}
                        <div class="right center">
                            <h5>
                                <strong>
                                    Share this post
                                </strong>
                            </h5>
                            <a class="no-text-decoration"
                               href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url
                                       absolute="true"}}"
                               onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                                <i class="fa fa-2x fa-twitter-square" aria-hidden="true"></i>
                                <span class="hide">Twitter</span>
                            </a>
                            <a class="no-text-decoration" style="margin: 0 15px;"
                               href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                               onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                                <i class="fa fa-2x fa-facebook-square" aria-hidden="true"></i>
                                <span class="hide">Facebook</span>
                            </a>
                            <a class="no-text-decoration"
                               href="https://plus.google.com/share?url={{url absolute="true"}}"
                               onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                                <i class="fa fa-2x fa-google-plus-square" aria-hidden="true"></i>
                                <span class="hide">Google+</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{{/post}}